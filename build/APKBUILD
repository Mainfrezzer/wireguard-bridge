# Maintainer: Mainfrezzer <mainfrezzer@placeholder.com>
pkgname=openresolv
pkgver=3.17.3
pkgrel=0
pkgdesc="A framework for managing DNS information"
url="https://roy.marples.name/projects/openresolv"
arch="noarch"
license="BSD-2-Clause"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Mainfrezzer/openresolv/archive/refs/tags/v$pkgver.tar.gz
	detect_init-remove-irrelevant.patch
	"
options="!check"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--rundir=/run \
		--sysconfdir=/etc
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

